<view class="container">
    <l-grid l-class="inner-container">
        <block wx:for="{{grid}}">
            <l-grid-item key="{{index}}" slot="{{index}}">    
            <!--  key and slot 干嘛的 -->
                <view class="grid-item">
                    <image class="img" src="{{item.img}}">
                    </image>
                    <text class="text">{{item.title}}</text>
                </view>
            </l-grid-item>
        </block>
    </l-grid>
</view>