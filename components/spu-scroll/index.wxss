/* components/spu-scroll/spu-scroll.wxss */


.container{
    padding: 42rpx 0 34rpx 28rpx;
    background-color: white;
}

.title{
    width: 694rpx;
    height: 90rpx;
    align-items: center;
}

.price-value{
    font-size: 30rpx !important;
    color: #157658 !important;
}

.price-unit{
    font-size: 30rpx !important;
    color: #157658 !important;
}
.scroll-view{
    margin-top: 28rpx;
    display: flex;
    flex-direction: row; 
}
.inner{
    display: flex;
    flex-direction: row; 
}

.spu-continer{
    margin-right: 60rpx;
    display: flex;
    flex-direction: column;
    align-items: center;

}
.spu-image{
    height: 160rpx;
    width: 160rpx;
}

.spu-text{
    font-size: 20rpx;
    color: #666666;
    margin-top: 20rpx;
    /* width: 100rpx; */
    /* text-align: center; */
    /* overflow: hidden; */
    text-overflow: ellipsis;       
    white-space: nowrap;  
}